
<div class="categories">

    <div class="main-container">

        {% set compt_categories = 0 %}

        <ul class="liste-categories">
            {% for categ in categories %}

                {% if compt_categories < 4 %}
                    <li id="cat"><a href="#">{{categ.nom}}</a></li>
                {% else %}
                    {% set compt_categories = 4 %}
                {% endif %}

                    {% set compt_categories = compt_categories + 1 %}
            {% endfor %}

                
                
        </ul>

        <div class="plus">
            <a href="#" id="plus-de-categories">Plus</a>
        </div>
            
    </div>
</div>